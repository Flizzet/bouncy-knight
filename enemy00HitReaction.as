package {	import flash.display.MovieClip;	import flash.events.*;	import flash.geom.ColorTransform;	public class enemy00HitReaction extends MovieClip	{		var colorNumber:Number = Math.random() * 1;		var hitDirection:Number = Math.floor(Math.random() * 4.99);		var direction1:Number = Math.random() * 20		var direction2:Number = Math.random() * 20		var direction3:Number = Math.random() * 20		var direction4:Number = Math.random() * 20				public function enemy00HitReaction()		{			this.addEventListener(Event.ENTER_FRAME, fadeOut);			var colorTransformer:ColorTransform = this.transform.colorTransform;			colorTransformer.greenMultiplier = colorNumber;			colorTransformer.blueMultiplier = colorNumber;			colorTransformer.redMultiplier = colorNumber;			transform.colorTransform = colorTransformer;		}		private function fadeOut(e:Event)		{			if (hitDirection == 1)			{				x +=  direction1;				y +=  direction1;			}			else if (hitDirection == 2)			{				x -=  direction2;				y -=  direction2;			}			else if (hitDirection == 3)			{				x +=  direction3;				y -=  direction3;			}			else if (hitDirection == 4)			{				x -=  direction4;				y +=  direction4;			}						rotation = Math.random() * 360;			if (currentFrame == 10)			{				parent.removeChild(this);				this.removeEventListener(Event.ENTER_FRAME, fadeOut);			}		}	}}